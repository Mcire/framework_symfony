{% extends 'base.html.twig' %}

{% block title %}Gestions des produits{% endblock %}

{% block body %}
<div class="row ">
    <div class="container col-md-6 mt-10">
        <div class="card shadow-none p-3 mb-5 bg-light rounded">
            <div class="card-header text-center bg-info text-white ">Liste des produits</div>
            <div class="card-body border-info">
                <table class="table table-striped table-bordered border-primary">
                    <thead class="thead-dark text-center">
                    <tr>
                        <th scope="col">Identifiant</th>
                        <th scope="col">Libelle</th>
                        <th scope="col">En stock</th>
                    </tr>
                    </thead>
                    {% for p in produits %}
                    <tr>
                        <th scope="row">{{ p.id }}</th>
                        <td>{{ p.libelle }}</td>
                        <td>{{ p.stock }}</td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="card-footer text-center bg-info">CHE</div>
        </div>
    </div>
    <div class="container col-md-5 ">    
        <div class="card shadow-none p-3 mb-5 bg-light rounded">
            <div class="card-header text-center bg-info text-white">Formulaire de gestion des produits</div>
            <div class="card-body">
                {{ form(form) }}
            </div>
            <div class="card-footer text-center bg-info">CHE</div>
        </div>
    </div>
</div>
{% endblock %}
