{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="row">
    <div class="container col-md-6">
        <div class="card shadow-none p-3 mb-5 bg-light rounded">
            <div class="card-header text-center bg-primary text-white">Liste des Utilisateurs</div>
            <div class="card-body border-primary">
                <table class="table table-striped table-bordered border-primary">
                    <thead class="thead-dark text-center text-dark">
                    <tr>
                        <th scope="col">Identifiant</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prenom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Role</th>
                    </tr>
                    </thead>
                    {% for u in users %}
                    <tr>
                        <th scope="row">{{ u.id }}</th>
                        <td>{{ u.nom }}</td>
                        <td>{{ u.prenom }}</td>
                        <td>{{ u.email }}</td>
                        <td>
                            {% for u in u.idRoles  %}
                                {{ u.nomRole }} <br>
                            {% endfor %}
                        </td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="card-footer text-center">LPGL</div>
        </div>
    </div>
    <div class="container col-md-5">    
        <div class="card shadow-none p-3 mb-5 bg-light rounded">
            <div class="card-header text-center bg-primary text-white">Formulaire de gestion des produits</div>
            <div class="card-body">
                            {{ form(form) }}
                
    {# {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }} #}
            </div>
            <div class="card-footer text-center bg-info">CHE</div>
        </div>
    </div>
</div>
   
{% endblock %}
