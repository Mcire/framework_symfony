{% extends 'base.html.twig' %}

{% block title %}Gestions des entrees{% endblock %}

{% block body %}

<div class="row">
    <div class="container col-md-6">
        <div class="card shadow-none p-3 mb-5 bg-light rounded">
            <div class="card-header text-center bg-primary text-white">Liste des achats</div>
            <div class="card-body">
                <table class="table table-striped table-bordered border-primary">
                    <thead class="thead-dark text-center text-dark">
                    <tr>
                        <th scope="col">Identifiant</th>
                        <th scope="col">date</th>
                        <th scope="col">Quantite achet√©</th>
                        <th scope="col">Prix Unitaire</th>
                        <th scope="col">Produit</th>
                    </tr>
                    </thead>
                    {% for e in entrees %}
                    <tr>
                        <th scope="row">{{ e.id }}</th>
                        <td>{{ e.date|date('d/m/y') }}</td>
                        <td>{{ e.quantite }}</td>
                        <td>{{ e.prix }}</td>
                        <td>{{ e.idProduit }}</td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="card-footer text-center bg-info">CHE</div>
        </div>
    </div>
    <div class="container col-md-6">    
        <div class="card shadow-none p-3 mb-5 bg-light rounded">
            <div class="card-header text-center bg-primary text-white">Formulaire de gestion des achats</div>
            <div class="card-body">
                {{ form(form) }}
            </div>
            <div class="card-footer text-center bg-info">CHE</div>
        </div>
    </div>
</div>


{% endblock %}
