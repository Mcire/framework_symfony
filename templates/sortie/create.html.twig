{% extends 'base.html.twig' %}

{% block title %}Gestions des sorties {% endblock %}

{% block body %}

<div class="row">
    <div class="container col-md-5">
        <div class="card shadow-none p-3 mb-5 bg-light rounded">
            <div class="card-header text-center bg-primary text-white">Liste des ventes</div>
            <div class="card-body border-primary">
                <table class="table table-striped table-bordered  border-primary">
                    <thead class="thead-dark text-center text-dark ">
                    <tr>
                        <th scope="col">Identifiant</th>
                        <th scope="col">date</th>
                        <th scope="col">Quantite vendue</th>
                        <th scope="col">Produit</th>
                    </tr>
                    </thead>
                    {% for s in sorties %}
                    <tr>
                        <th scope="row">{{ s.id }}</th>
                        <td>{{ s.date|date('d/m/y')}}</td>
                        <td>{{ s.quantite }}</td>
                        <td>{{ s.idProduit }}</td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="card-footer text-center bg-info">CHE</div>
        </div>
    </div>
    <div class="container col-md-6">    
        <div class="card shadow-none p-3 mb-5 bg-light rounded">
            <div class="card-header text-center bg-primary text-white">Formulaire de gestion des ventes</div>
            <div class="card-body">
                {% if error_message is defined %}
                    <div class="alert alert-danger">{{ error_message }}</div>
                {% endif %}
                {{ form(form) }}
            </div>
            <div class="card-footer text-center bg-info">CHE</div>
        </div>
    </div>

{% endblock %}
